---
import { type RichText } from "../../lib/types/interfaces.ts"

export interface Props {
  richTexts?: RichText[]
}

const { richTexts } = Astro.props
---

{
  richTexts && richTexts?.length > 0 && richTexts[0].Text?.Content && (
    <div class="caption">{richTexts[0].Text?.Content}</div>
  )
}

<style>
  .caption {
    margin-top: 0.3rem;
    font-size: 0.9rem;
    color: var(--accents-3);
  }
</style>
